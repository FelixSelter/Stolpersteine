---
import { Icon } from 'astro-icon/components';
import XElement from 'astro-xelement';
const { Div } = XElement;

interface Props {
  onLeftClick: (e: MouseEvent) => void;
  onRightClick: (e: MouseEvent) => void;
}

const { onLeftClick, onRightClick } = Astro.props;
---

<div class="container">
  <Div class="button left" @click={onLeftClick}>
    <Icon class="icon" name="fa6-solid:angle-left" />
  </Div>
  <div class="content">
    <slot />
  </div>
  <Div class="button right" @click={onRightClick}>
    <Icon class="icon" name="fa6-solid:angle-right" />
  </Div>
</div>

<style>
  .container {
    position: relative;
    height: 100%;
    padding: 0px;
  }

  .content {
    height: 100%;
  }

  .left {
    left: 0px;
  }

  .right {
    right: 0px;
  }

  .content {
    margin-inline: 50px;
  }

  .button {
    position: absolute;
    top: calc(50% - 25px);
    width: 50px;
    height: 50px;

    background-color: lightgray;
    border-radius: 50%;
  }

  .button:hover {
    background-color: darkgray;
  }

  .icon {
    width: 100%;
    height: 100%;
    pointer-events: none;
  }
</style>
